<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <div>
    <p>
      <%= form.label :title %> <br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :image %> <br>
      <%= form.text_field :image %>
    </p>

    <p>
      <%= form.label :rule %> <br>
      <%= form.select :rule,  options_for_select(Badge::RULES.pluck(:title, :value))%>
    </p>

    <p><%= form.submit %></p>
  </div>
<% end %>
