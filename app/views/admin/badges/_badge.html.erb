<tr>
  <td><%= badge.title %></td>
  <td><div class="badge-img"><%= image_tag "#{badge.image}", alt:'badge' %></div></td>
  <td><%= badge.rule_name %></td>
  <td><%= badge.rule_value %></td>
  <td><%= link_to t('actions.show'), admin_badge_path(badge)%> </td>
  <td>
    <%= link_to t('actions.edit'),edit_admin_badge_path(badge) %>
  </td>
  <td><%= link_to t('actions.delete'), admin_badge_path(badge),
                            method: :delete,
                            data: { confirm: t('actions.confirm') }  %></td>
</tr>
