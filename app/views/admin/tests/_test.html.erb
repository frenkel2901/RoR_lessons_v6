<tr>
  <td class="align-middle">
    <span class='test-title' data-test-id="<%= test.id %>">
    <%= link_to test.title, admin_test_path(test)%>
    </span>

    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle">
    <%= link_to t('action.edit'), edit_admin_test_path(test),
                                  data: { test_id: test.id },
                                  class: 'form-inline-link' %>
  </td>
  <td class="align-middle"><%= button_to t('action.delete'), admin_test_path(test),
                              method: :delete,
                              data: { confirm: t('action.confirm') } %></td>
</tr>
