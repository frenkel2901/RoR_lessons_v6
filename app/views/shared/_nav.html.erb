<nav>

<% if current_user.is_a?(Admin) %>
    <%= link_to t('nav.admin_view'), admin_tests_path %><br>                 
<% end %>

  <% if user_signed_in? %>
    <p class="nav user"><%= t('nav.welcome', user_email: current_user.email) %></p>
  <% end %>

  <h2 class="nav nav-title"><%= link_to t('nav.header'), root_path %></h2>

  <ul class="nav-list">
    <% unless user_signed_in? %>
      <li class="nav-item"><%= link_to t('nav.register'), new_user_registration_path, class:"nav nav-link" %></li>
      <li class="nav-item"><%= link_to t('nav.login'), new_user_session_path, class:"nav nav-link" %></li>
    <% end %>
    <% if user_signed_in? %>
      <li class="nav-item"><%= button_to t('nav.logout'), destroy_user_session_path, class:"nav nav-link", 
